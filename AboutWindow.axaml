<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="OplusEdlTool.AboutWindow"
        Title="About OPLUS EDL Tool" 
        Height="350" Width="450" 
        WindowStartupLocation="CenterOwner" 
        CanResize="False"
        Background="#F5F5F5"
        Icon="avares://OplusEdlTool/app.ico">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="OPLUS EDL Tool" FontSize="24" FontWeight="Bold" 
                       Foreground="#1976D2" HorizontalAlignment="Center"/>
            <TextBlock Text="Version 2.0.0" FontSize="12" Foreground="#666" 
                       HorizontalAlignment="Center" Margin="0,4,0,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="A tool for OPLUS devices EDL operations" 
                       TextWrapping="Wrap" TextAlignment="Center" 
                       Foreground="#333" Margin="0,0,0,16"/>

            <TextBlock TextAlignment="Center" Margin="0,0,0,8">
                <Run Text="统筹开发: " Foreground="#666"/>
                <Run Text="Github@salokrwhite" FontWeight="SemiBold" Foreground="#333"/>
            </TextBlock>
            
            <TextBlock TextAlignment="Center" Margin="0,0,0,8">
                <Run Text="Author: " Foreground="#666"/>
                <Run Text="Github@salokrwhite" FontWeight="SemiBold" Foreground="#333"/>
            </TextBlock>

            <TextBlock TextWrapping="Wrap" TextAlignment="Center" 
                       Foreground="#999" FontSize="10" Margin="0,16,0,0">
                <Run Text="本软件仅供学习使用，严禁用于非法用途"/>
                <LineBreak/>
                <Run Text="This software is for educational purposes only and must not be used for any illegal activities."/>
            </TextBlock>
        </StackPanel>
        
        <Button Grid.Row="2" Content="好的 / OK" Width="120" Height="32" 
                HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                Click="OK_Click" Margin="0,10,0,0"/>
    </Grid>
</Window>
