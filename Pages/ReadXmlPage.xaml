<UserControl x:Class="OplusEdlTool.Pages.ReadXmlPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="300">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <GroupBox Header="Read Mode" Grid.Row="0" Margin="0,0,0,12">
            <StackPanel>
                <RadioButton x:Name="ReadModeAuto" Content="Auto Read (GPT + All Partitions)" IsChecked="True" Margin="0,4"/>
                <RadioButton x:Name="ReadModeCustomXml" Content="Read by Custom XML" Margin="0,4"/>
            </StackPanel>
        </GroupBox>
        
        <GroupBox Header="Custom XML Files (for Custom XML mode)" Grid.Row="1">
            <ListBox x:Name="XmlList"/>
        </GroupBox>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Add XML" Click="AddXml_Click"/>
            <Button Content="Run" Margin="8,0,0,0" Click="Run_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
