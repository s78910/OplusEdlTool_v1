<UserControl x:Class="OplusEdlTool.Pages.FirehosePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="300">
    <StackPanel Margin="12">
        <TextBlock Text="Device Programmer"/>
        <DockPanel Margin="0,6,0,0">
            <TextBox x:Name="DevPrg" MinWidth="360"/>
            <Button Content="..." Width="48" Margin="6,0,0,0" Click="PickDevPrg_Click"/>
        </DockPanel>
        <TextBlock Text="Digest"/>
        <DockPanel Margin="0,6,0,0">
            <TextBox x:Name="Digest" MinWidth="360"/>
            <Button Content="..." Width="48" Margin="6,0,0,0" Click="PickDigest_Click"/>
        </DockPanel>
        <TextBlock Text="Sig"/>
        <DockPanel Margin="0,6,0,0">
            <TextBox x:Name="Sig" MinWidth="360"/>
            <Button Content="..." Width="48" Margin="6,0,0,0" Click="PickSig_Click"/>
        </DockPanel>
        <Button Content="Run" Width="120" HorizontalAlignment="Right" Margin="0,12,0,0" Click="Run_Click"/>
    </StackPanel>
</UserControl>
