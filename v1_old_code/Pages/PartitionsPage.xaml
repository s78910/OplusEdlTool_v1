<UserControl x:Class="OplusEdlTool.Pages.PartitionsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="600" MinHeight="300">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="Grid" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Extended" PreviewMouseDoubleClick="Grid_PreviewMouseDoubleClick" BeginningEdit="Grid_BeginningEdit">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="70"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="160"/>
                <DataGridTextColumn Header="LUN" Binding="{Binding Lun}" Width="60"/>
                <DataGridTextColumn Header="Start LBA" Binding="{Binding FirstLBA}" Width="120"/>
                <DataGridTextColumn Header="End LBA" Binding="{Binding LastLBA}" Width="120"/>
                <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="120"/>
                <DataGridTextColumn Header="File Path" Binding="{Binding FilePath}" Width="*" IsReadOnly="False"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Read" Click="Read_Click"/>
            <Button Content="Select All" Margin="8,0,0,0" Click="SelectAll_Click"/>
            <Button Content="Read Selected" Margin="8,0,0,0" Click="ReadSelected_Click"/>
            <Button Content="Write Selected" Margin="8,0,0,0" Click="WriteSelected_Click"/>
            <Button Content="Erase Selected" Margin="8,0,0,0" Click="EraseSelected_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
