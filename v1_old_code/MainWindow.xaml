<Window x:Class="OplusEdlTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OPLUS EDL Tool" Height="800" Width="1200" MinHeight="700" MinWidth="1200" 
        WindowStartupLocation="CenterScreen" Background="#F5F5F5"
        UseLayoutRounding="True">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" ResizeBorderThickness="5" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#1976D2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="TitleText" Grid.Column="0" Text="OPLUS EDL Tool" VerticalAlignment="Center" 
                       Margin="10,0,0,0" Foreground="White" FontWeight="SemiBold" FontSize="13"/>

            <Border Grid.Column="1" Background="Transparent"/>

            <Button x:Name="BtnLanguage" Grid.Column="2" Content="EN" Click="SwitchLanguage_Click" 
                    WindowChrome.IsHitTestVisibleInChrome="True"
                    MinWidth="120" Height="32" Padding="10,0" Background="Transparent" Foreground="White" 
                    BorderThickness="0" ToolTip="Switch Language / 切换语言" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1565C0"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#0D47A1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="BtnAbout" Grid.Column="4" Content="About" Click="About_Click" 
                    WindowChrome.IsHitTestVisibleInChrome="True"
                    Width="60" Height="32" Background="Transparent" Foreground="White" 
                    BorderThickness="0" ToolTip="About this tool" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1565C0"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#0D47A1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <StackPanel Grid.Column="5" Orientation="Horizontal">
                <Button x:Name="BtnMinimize" Content="─" Click="Minimize_Click" 
                        WindowChrome.IsHitTestVisibleInChrome="True"
                        Width="46" Height="32" Background="Transparent" Foreground="White" 
                        BorderThickness="0" FontSize="10" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1565C0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="BtnMaximize" Content="☐" Click="Maximize_Click" 
                        WindowChrome.IsHitTestVisibleInChrome="True"
                        Width="46" Height="32" Background="Transparent" Foreground="White" 
                        BorderThickness="0" FontSize="12" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1565C0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="BtnClose" Content="✕" Click="Close_Click" 
                        WindowChrome.IsHitTestVisibleInChrome="True"
                        Width="46" Height="32" Background="Transparent" Foreground="White" 
                        BorderThickness="0" FontSize="12" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E81123"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="28"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" MinWidth="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="320" MinWidth="280"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <GroupBox x:Name="GrpFirehose" Grid.Row="0" Header="Enter Firehose Mode" Margin="4">
                    <StackPanel Margin="8">
                        <TextBlock x:Name="LblDevPrg" Text="Device Programmer (devprg*.mbn)" Foreground="#333" Margin="0,0,0,4" FontSize="11"/>
                        <DockPanel Margin="0,0,0,6">
                            <Button Content="..." Width="36" DockPanel.Dock="Right" Margin="4,0,0,0" Click="PickDevPrg_Click"/>
                            <TextBox x:Name="DevPrg" Background="White" FontSize="11"/>
                        </DockPanel>
                        <TextBlock x:Name="LblDigest" Text="Digest (*.bin)" Foreground="#333" Margin="0,0,0,4" FontSize="11"/>
                        <DockPanel Margin="0,0,0,6">
                            <Button Content="..." Width="36" DockPanel.Dock="Right" Margin="4,0,0,0" Click="PickDigest_Click"/>
                            <TextBox x:Name="Digest" Background="White" FontSize="11"/>
                        </DockPanel>
                        <TextBlock x:Name="LblSig" Text="Sig (*.bin)" Foreground="#333" Margin="0,0,0,4" FontSize="11"/>
                        <DockPanel Margin="0,0,0,6">
                            <Button Content="..." Width="36" DockPanel.Dock="Right" Margin="4,0,0,0" Click="PickSig_Click"/>
                            <TextBox x:Name="Sig" Background="White" FontSize="11"/>
                        </DockPanel>
                        <Button x:Name="BtnEnterFirehose" Content="Enter Firehose" Width="248" HorizontalAlignment="Right" Click="EnterFirehose_Click"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox x:Name="GrpFlashPackage" Grid.Row="1" Header="Flash Package (ROM)" Margin="4">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="LblSelectRom" Grid.Row="0" Text="Select ROM folder or OFP/OPS file" Foreground="#333" Margin="0,0,0,4" FontSize="11" TextWrapping="Wrap"/>
                        <DockPanel Grid.Row="1" Margin="0,0,0,4">
                            <Button Content="..." Width="36" DockPanel.Dock="Right" Margin="4,0,0,0" Click="PickRomFolder_Click"/>
                            <TextBox x:Name="RomPath" Background="White" IsReadOnly="True" FontSize="11"/>
                        </DockPanel>
                        <Grid Grid.Row="2" Margin="0,4,0,4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ListBox x:Name="XmlFileList" Grid.Row="0" Background="White" 
                                 BorderBrush="#DDD" BorderThickness="1" SelectionMode="Multiple"
                                 AllowDrop="True" Drop="XmlFileList_Drop" DragOver="XmlFileList_DragOver">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                              Margin="2" VerticalAlignment="Center" FontSize="11"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Grid Grid.Row="1" Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="BtnLoad" Grid.Column="0" Content="Load" Click="LoadSelectedXml_Click"
                                    ToolTip="Load partitions from selected XML files" Padding="4,2"/>
                                <Button x:Name="BtnAll" Grid.Column="2" Content="All" Click="SelectAllXml_Click"
                                    ToolTip="Select all XML files" Padding="4,2"/>
                                <Button x:Name="BtnNone" Grid.Column="4" Content="None" Click="SelectNoneXml_Click"
                                    ToolTip="Deselect all XML files" Padding="4,2"/>
                            </Grid>
                        </Grid>
                        <TextBlock Grid.Row="3" x:Name="RomInfo" Text="" Foreground="#666" FontSize="10" TextWrapping="Wrap"/>
                    </Grid>
                </GroupBox>
            </Grid>

            <Border Grid.Row="0" Grid.Column="1" Width="5" Background="#E0E0E0"/>

            <GroupBox x:Name="GrpPartitions" Grid.Row="0" Grid.Column="2" Header="Partitions" Margin="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <DockPanel Grid.Row="0" Margin="4,4,4,2">
                        <TextBlock x:Name="LblSearch" Text="Search:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBox x:Name="SearchBox" Background="White" TextChanged="SearchBox_TextChanged" 
                             ToolTip="Search partition by name"/>
                    </DockPanel>
                    <DataGrid x:Name="Grid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Extended" 
                          PreviewMouseDoubleClick="Grid_PreviewMouseDoubleClick" BeginningEdit="Grid_BeginningEdit" 
                          PreviewMouseLeftButtonDown="Grid_PreviewMouseLeftButtonDown"
                          Margin="4" Background="White" GridLinesVisibility="Horizontal" 
                          BorderBrush="#DDD" BorderThickness="1" RowHeaderWidth="0"
                          HorizontalScrollBarVisibility="Auto"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          VirtualizingPanel.ScrollUnit="Pixel"
                          VirtualizingPanel.CacheLength="20,20"
                          VirtualizingPanel.CacheLengthUnit="Item"
                          EnableRowVirtualization="True"
                          EnableColumnVirtualization="False"
                          ScrollViewer.CanContentScroll="True"
                          ScrollViewer.IsDeferredScrollingEnabled="True"
                          RenderOptions.EdgeMode="Aliased"
                          RenderOptions.BitmapScalingMode="LowQuality"
                          TextOptions.TextFormattingMode="Display">
                        <DataGrid.CacheMode>
                            <BitmapCache EnableClearType="True" RenderAtScale="1" SnapsToDevicePixels="True"/>
                        </DataGrid.CacheMode>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem x:Name="MenuCheckSelected" Header="Check Selected" Click="CheckSelectedRows_Click"/>
                                <MenuItem x:Name="MenuUncheckSelected" Header="Uncheck Selected" Click="UncheckSelectedRows_Click"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="30">
                                <DataGridCheckBoxColumn.Header>
                                    <CheckBox x:Name="SelectAllCheckBox" Click="SelectAllCheckBox_Click" ToolTip="Select All"/>
                                </DataGridCheckBoxColumn.Header>
                                <DataGridCheckBoxColumn.ElementStyle>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="IsHitTestVisible" Value="True"/>
                                    </Style>
                                </DataGridCheckBoxColumn.ElementStyle>
                            </DataGridCheckBoxColumn>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="90"/>
                            <DataGridTextColumn Header="LUN" Binding="{Binding Lun}" Width="35"/>
                            <DataGridTextColumn Header="Start" Binding="{Binding FirstLBA}" Width="65"/>
                            <DataGridTextColumn Header="End" Binding="{Binding LastLBA}" Width="65"/>
                            <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="65"/>
                            <DataGridTextColumn Header="File Path" Binding="{Binding FilePath}" Width="Auto" MinWidth="300" IsReadOnly="False">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="NoWrap"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Grid.Row="2" Margin="4,6,4,4">
                        <WrapPanel HorizontalAlignment="Center">
                            <Button x:Name="BtnReadPartitions" Content="Read Partitions" Click="ReadPartitions_Click" Margin="3,2"/>
                            <Button x:Name="BtnReadSelected" Content="Read Selected" Click="ReadSelected_Click" Margin="3,2"/>
                            <Button x:Name="BtnWriteSelected" Content="Write Selected" Click="WriteSelected_Click" Margin="3,2"/>
                            <Button x:Name="BtnEraseSelected" Content="Erase Selected" Click="EraseSelected_Click" Margin="3,2" Background="#D32F2F"/>
                            <Button x:Name="BtnStopAll" Content="Stop All" Click="StopAll_Click" Margin="3,2" Background="#FF5722" Foreground="White"/>
                        </WrapPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0">
                            <CheckBox x:Name="ExportXmlCheckBox" Content="Export XML" Margin="0,0,15,0"
                                  ToolTip="Export selected partitions to rawprogram XML when backing up"/>

                            <CheckBox x:Name="AutoRebootCheckBox" Content="Auto reboot after flash" 
                                  ToolTip="Automatically reboot device after flashing is complete"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <Border Grid.Row="0" Grid.Column="3" Width="5" Background="#E0E0E0"/>

            <GroupBox x:Name="GrpLog" Grid.Row="0" Grid.Column="4" Header="Log" Margin="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="4,4,4,4">
                        <DockPanel Margin="0,0,0,4">
                            <TextBlock x:Name="LblPort9008" Text="9008 Port:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock x:Name="PortStatus" Text="Not detected" VerticalAlignment="Center" 
                                   Foreground="#D32F2F" FontWeight="Bold"/>
                        </DockPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="BtnClear" Content="Clear" Width="55" Margin="2,0" Click="ClearLog_Click" ToolTip="Clear log"/>
                        </StackPanel>
                    </StackPanel>
                    <TextBox x:Name="Log" Grid.Row="1" IsReadOnly="True" TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas" FontSize="11" Background="White" 
                         Foreground="#333" Padding="4"/>
                </Grid>
            </GroupBox>

            <ProgressBar x:Name="Progress" Grid.Row="1" Grid.ColumnSpan="5" Minimum="0" Maximum="100" Height="20" Margin="4,4,4,0"/>
        </Grid>
    </Grid>
</Window>
