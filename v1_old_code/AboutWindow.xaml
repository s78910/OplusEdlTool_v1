<Window x:Class="OplusEdlTool.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About OPLUS EDL Tool" Height="329" Width="428" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="OPLUS EDL Tool" FontSize="24" FontWeight="Bold" 
                       Foreground="#1976D2" HorizontalAlignment="Center"/>
            <TextBlock Text="Version 1.0.0" FontSize="12" Foreground="#666" 
                       HorizontalAlignment="Center" Margin="0,4,0,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="A tool for OPLUS devices EDL operations" 
                       TextWrapping="Wrap" TextAlignment="Center" Foreground="#333" Margin="0,0,0,16"/>

            <TextBlock TextAlignment="Center" Margin="0,0,0,8">
                <Run Text="统筹开发: " Foreground="#666"/>
                <Run Text="小白科学院附属数学与系统科学研究院" FontWeight="SemiBold" Foreground="#333"/>
            </TextBlock>
            <TextBlock TextAlignment="Center" Margin="0,0,0,8">
                <Run Text="Author: " Foreground="#666"/>
                <Run Text="Institute of Mathematics and Systems Science,XAS" FontWeight="SemiBold" Foreground="#333"/>
            </TextBlock>

            <TextBlock Text="本软件仅供学习使用，严禁用于非法用途&#x0a;This software is for educational purposes only and must not be used for any illegal activities." 
                       TextWrapping="Wrap" TextAlignment="Center" 
                       Foreground="#999" FontSize="10" Margin="0,16,0,0"/>
        </StackPanel>
        
        <Button Grid.Row="2" Content="好的 / OK" Width="80" Height="28" 
                HorizontalAlignment="Center" Click="OK_Click" Margin="0,9,0,-9"/>
    </Grid>
</Window>
